!!!
%html
    %head
        %meta{:charset => "utf-8"}/
        %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
        %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
        %title
            Dashboard
            ="| #{@category[:name]}"
        %link{:href => "/css/dashboard.css", :type => "text/css", :rel => "stylesheet"}
        %link{:href => "/icons/css/font-awesome.min.css", :type => "text/css", :rel => "stylesheet"}
        %link{:href => "/graphics/icon.png", :rel => "shortcut icon", :type => "image/png"}/
    %body
        #wrapper
            %nav
                .left
                    %p
                        CLUB RALLY
                .right
                    %a{:href => "/logout"}
                        LOGOUT
                    .contain
                        %form{:action => "/dashboard/search", :method => "get"}
                            %span.fa.fa-fw.fa-search
                            %input{:type => "text", :name => "search"}
            #body
                #sidebar
                    .opt
                        %a{:href => "/dashboard/home"}
                        .left
                            %i.fa.fa-users.fa-fw
                            .color
                        .right
                            MY CLUBS
                    .opt.active
                        %a{:href => "/dashboard/browse"}
                        .left
                            %i.fa.fa-folder-open.fa-fw
                            .color
                        .right
                            BROWSE CLUBS
                    .opt
                        %a{:href => "/dashboard/notifications"}
                        .left
                            %i.fa.fa-newspaper-o.fa-fw
                            .color
                        .right
                            FEED
                            -unless @user.notifications.length == 0
                                ="(#{@user.notifications.length})"
                    .opt
                        %a{:href => "/dashboard/createclub"}
                        .left
                            %i.fa.fa-plus.fa-fw
                            .color
                        .right
                            CREATE A CLUB
                #content
                    #color-strip
                    %header
                        %h1
                            %i.fa.fa-fw{:class => "fa-#{@category[:icon]}"}
                            =@category[:name]
                    #info.browse
                        -if @clubs.length == 0
                            %h1.frown
                                ="There are currently no '#{@category[:name]}' clubs"
                                %i.fa.fa-frown-o
                        -else
                            %h1
                                ="Showing #{@category[:name]} clubs:"
                            -@clubs.each do |club|
                                .club-box
                                    .center
                                        .img{:style => "background-image: url(/upload/#{club.img})"}
                                        %h1
                                            =club.name
                                        %p
                                            =club.description
                                        -if clubincludesuser?(club)
                                            %a.btn
                                                JOINED
                                            %p.subtitle
                                                %a{:href => "/dashboard/club/#{club.name}"}
                                                    View 
                                                the club
                                        -else
                                            %a.btn.btn-empty{:href => "/join/#{club.name}"}
                                                JOIN
                                            %p.subtitle
                                                or
                                                %a{:href => "/dashboard/club/#{club.name}"}
                                                    view
                                                the club
                    %footer
                        .left
                            %p
                                Made with 
                                %i.fa.fa-heart
                                in 
                                %a{:href => "https://www.andover.edu", :target => "_blank"}
                                    Andover
                        .right
                            -$footer.each do |link|
                                %a{:href => link[:path]}
                                    =link[:text]