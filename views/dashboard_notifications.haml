!!!
%html
    %head
        %meta{:charset => "utf-8"}/
        %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
        %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
        %title
            Dashboard
        %link{:href => "/css/dashboard.css", :type => "text/css", :rel => "stylesheet"}
        %link{:href => "/icons/css/font-awesome.min.css", :type => "text/css", :rel => "stylesheet"}
        %link{:href => "/graphics/icon.png", :rel => "shortcut icon", :type => "image/png"}/
    %body
        #wrapper
            %nav
                .left
                    %p
                        CLUB RALLY
                .right
                    %a{:href => "/logout"}
                        LOGOUT
                    .contain
                        %form{:action => "/dashboard/search", :method => "get"}
                            %span.fa.fa-fw.fa-search
                            %input{:type => "text", :name => "search", :value => params[:search]}
            #body
                #sidebar
                    .opt
                        %a{:href => "/dashboard/home"}
                        .left
                            %i.fa.fa-users.fa-fw
                            .color
                        .right
                            MY CLUBS
                    .opt
                        %a{:href => "/dashboard/browse"}
                        .left
                            %i.fa.fa-folder-open.fa-fw
                            .color
                        .right
                            BROWSE CLUBS
                    .opt.active
                        %a{:href => "/dashboard/notifications"}
                        .left
                            %i.fa.fa-newspaper-o.fa-fw
                            .color
                        .right
                            FEED
                #content
                    #color-strip
                    %header
                        %h1
                            %i.fa.fa-fw.fa-newspaper-o
                            FEED
                    #info.feed
                        -@user.notifications.each do |alert|
                            .notification
                                -if alert[:type] != "clock-o"
                                    %a{:href => "/delete/notification/#{alert[:id]}"}
                                        %i.fa.fa-fw.fa-times
                                -else
                                    %a
                                        %i.fa.fa-times.fa-fw.ghost
                                .notification-box
                                    %i.fa.fa-fw{:class => "fa-#{alert[:type]}"}
                                    .text
                                        %h1
                                            =alert[:title]
                                        %p
                                            =alert[:description]
                            .notification
                                %a{:href => "/delete/notification/#{alert[:id]}"}
                                    %i.fa.fa-fw.fa-times
                                .notification-box
                                    %i.fa.fa-fw{:class => "fa-#{alert[:type]}"}
                                    .text
                                        %h1
                                            =alert[:title]
                                        %p
                                            =alert[:description]
                        -if @user.notifications.empty?
                            %h1
                                No notifications right now
                                %i.fa.fa-frown-o
                    %footer
                        .left
                            Made with
                            %i.fa.fa-heart
                            in Andover
                        .right
                            %a{:href => "mailto:jshen@andover.edu"}
                                CONTACT
