!!!
%html
    %head
        %meta{:charset => "utf-8"}/
        %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
        %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
        %title
            Login
        %link{:href => "/css/login.css", :type => "text/css", :rel => "stylesheet"}
        %link{:href => "/icons/css/font-awesome.min.css", :type => "text/css", :rel => "stylesheet"}
        %link{:href => "/graphics/icon.png", :rel => "shortcut icon", :type => "image/png"}/
    %body
        #wrapper
            #background
            #vertical-box
                %a{:href => "/"}
                    %i.fa.fa-times.fa-fw.fa-2x
                %h1
                    SIGN-IN
                %form{:action => "/secureauth", :method => "post"}
                    %input.text{:type => "text", :name => "email", :placeholder => "Email"}
                    %br
                    %input.text{:type => "password", :name => "password", :placeholder => "Password"}
                    %br
                    - if flash[:error]
                        .error
                            %p
                                =flash[:error]
                    .forgot 
                        %span
                            %input#rememberme{:type => "checkbox", :value => "1", :checked => "checked", :name => "remember"}
                            %label{:for => "rememberme"}   
                                Remember me
                        %a{:href => "/forgot"}
                            Forgot Password?
                    %input.btn{:type => "submit", :value => "LOGIN"}
                .createaccount
                    Not Registered?
                    %a{:href => "/register"}
                        Register Now!
